{
 "flash" :  {
  "commands" : [
   {
    "duration" : 42000,
    "restrict" : null,
    "source" : "${helperFile}",
    "tool" : "notifier"
   },
   {
    "description" : "Waiting for device",
    "restrict" : null,
    "state" : "dnx_fw",
    "timeout" : 42000,
    "tool" : "waitForDevice"
   },
   {
    "duration" : 5000,
    "restrict" : null,
    "source" : "Edison board plugged",
    "tool" : "notifier"
   },
   {
    "gpflag" : "${gpflag}",
    "ifwi" : "${ifwi_file}",
    "ifwi_dnx" : "${fw_dnx_file}",
    "os" : "${os_file}",
    "os_dnx" : "${os_dnx_file}",
    "restrict" : null,
    "tool" : "xfstkDownloader"
   },
   {
    "description" : "Waiting for device",
    "restrict" : null,
    "state" : "pos",
    "timeout" : 120000,
    "tool" : "waitForDevice"
   },
   {
    "args" : "\"--alt\" \"u-boot0\" \"-D\" \"${u-boot_file}\" \"-t\" \"4096\"",
    "description" : "Flashing u-boot0",
    "mandatory" : true,
    "restrict" : null,
    "retry" : 2,
    "timeout" : 60000,
    "tool" : "dfuDownloader"
   },
   {
    "args" : "\"--alt\" \"u-boot-env0\" \"-D\" \"${u-boot-env_file}\" \"-t\" \"4096\"",
    "description" : "Flashing u-boot-env0",
    "mandatory" : true,
    "restrict" : null,
    "retry" : 2,
    "timeout" : 60000,
    "tool" : "dfuDownloader"
   },
   {
    "args" : "\"--alt\" \"u-boot-env1\" \"-D\" \"${u-boot-env_file}\" \"-t\" \"4096\"",
    "description" : "Flashing u-boot-env1",
    "mandatory" : true,
    "restrict" : null,
    "retry" : 2,
    "timeout" : 60000,
    "tool" : "dfuDownloader"
   },
   {
    "duration" : 6000,
    "restrict" : null,
    "tool" : "sleep"
   },
   {
    "description" : "Waiting for device",
    "restrict" : null,
    "state" : "pos",
    "timeout" : 120000,
    "tool" : "waitForDevice"
   },
   {
    "args" : "\"--alt\" \"boot\" \"-D\" \"${boot_file}\" \"-t\" \"4096\"",
    "description" : "Flashing boot",
    "mandatory" : true,
    "restrict" : null,
    "retry" : 2,
    "timeout" : 60000,
    "tool" : "dfuDownloader"
   },
   {
    "args" : "\"--alt\" \"update\" \"-D\" \"${update_file}\" \"-t\" \"4096\"",
    "description" : "Flashing update partition",
    "mandatory" : true,
    "restrict" : null,
    "retry" : 2,
    "timeout" : 1200000,
    "tool" : "dfuDownloader"
   },
   {
    "args" : "\"--alt\" \"rootfs\" \"-D\" \"${rootfs_file}\" \"-t\" \"4096\" \"-R",
    "description" : "Flashing rootfs",
    "mandatory" : true,
    "restrict" : null,
    "retry" : 2,
     "timeout" : 1200000,
     "tool" : "dfuDownloader"
   },
   {
    "duration" : 60000,
    "restrict" : null,
    "source" : "Edison board needs to reboot<br />
                Please do not unplug it for 2 minutes<br /><br />
                On Arduino board, led will stop blinking at boot completed<br /><br />
                <img src='images/Edison-arduino-blink-led.png' width='390' />",
    "tool" : "notifier"
   }
